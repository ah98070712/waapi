              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/send/{sessionId}/messages/file": {
      "post": {
        "summary": "Send a file message",
        "parameters": [
          {
            "in": "path",
            "name": "sessionId",
            "required": true,
            "description": "The ID of the session to send a file",
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "ApiKeyAuth": []
